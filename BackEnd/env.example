# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration (SQLite)
DATABASE_URL="file:./prisma/data/storyx.db"

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE=7d

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# AI Service Configuration
AI_API_KEY=your-ai-api-key
AI_API_URL=https://api.example.com

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*

# Encryption Configuration
# 用于加密存储 API 密钥的密钥（生产环境必须设置，建议使用 32 字节的随机字符串）
ENCRYPTION_KEY=your-encryption-key-change-in-production

# File Storage Service Configuration
# 文件存储基础路径（相对路径或绝对路径）
STORAGE_BASE_PATH=./storage

# Catbox 文件托管配置
# Catbox API 地址
CATBOX_API_URL=https://catbox.moe/user/api.php
# Catbox 用户哈希（从 https://catbox.moe/user/api.php 获取）
CATBOX_USER_HASH=

# 代理配置（可选，如果需要通过代理访问外部服务）
# 例如：http://127.0.0.1:7890
PROXY_URL=http://127.0.0.1:7890

